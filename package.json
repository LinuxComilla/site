{
    "name": "es6-boilerplate",
    "description": "Boilerplate for ES6 projects.",
    "version": "0.1.0",
    "homepage": "https://github.com/stefanwalther/es6-boilerplate",
    "author": {
        "name": "Stefan Walther",
        "url": "https://github.com/stefanwalther",
        "twitter": "waltherstefan"
    },
    "repository": "stefanwalther/es6-boilerplate",
    "bugs": {
        "url": "https://github.com/stefanwalther/es6-boilerplate/issues"
    },
    "license": "MIT",
    "files": [
        "/dist"
    ],
    "main": "index.js",
    "engines": {
        "node": ">=0.10.0"
    },
    "scripts": {
        "build": "gulp build",
        "test:unit": "mocha './test/unit/**/*.spec.js' --compilers js:babel-core/register",
        "lint": "eslint src",
        "docs": "verb"
    },
    "dependencies": {
        "chai": "^3.5.0"
    },
    "devDependencies": {
        "babel-core": "^6.11.4",
        "babel-preset-es2015": "^6.9.0",
        "chai": "^3.5.0",
        "eslint": "^3.1.1",
        "ghooks": "^1.3.2",
        "gulp": "^3.9.1",
        "gulp-babel": "^6.1.2",
        "gulp-format-md": "*",
        "gulp-sourcemaps": "^1.6.0",
        "mocha": "*"
    },
    "keywords": [],
    "verb": {
        "run": true,
        "toc": false,
        "layout": "default",
        "tasks": [
            "readme"
        ],
        "plugins": [
            "gulp-format-md"
        ],
        "related": {
            "list": []
        },
        "lint": {
            "reflinks": true
        },
        "reflinks": [
            "verb",
            "verb-readme-generator"
        ]
    },
    "config": {
        "ghooks": {
            "pre-push": "npm run docs",
            "post-merge": "npm install",
            "post-rewrite": "npm install"
        }
    }
}
